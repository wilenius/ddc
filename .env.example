# Django Settings
# IMPORTANT: Copy this file to .env and fill in your actual values
# Never commit the .env file to git!

# Generate a new secret key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Static files path
# Development: /path/to/project/staticfiles
# Production: /var/www/ddc/staticfiles (or wherever you deploy)
STATIC_ROOT=/path/to/your/staticfiles

# Allowed hosts (comma-separated, no spaces)
# Development: 0.0.0.0,127.0.0.1,localhost
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (optional - defaults to sqlite)
# For production, you might use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Email Configuration (optional - only needed if using email notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com
